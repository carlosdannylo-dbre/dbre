# Copie este arquivo para terraform.tfvars e preencha com seus dados
# Campos sensíveis (chaves da API) podem ser exportados como variáveis de ambiente
# TF_VAR_atlas_public_key e TF_VAR_atlas_private_key em vez de ficarem em arquivo.

atlas_public_key  = "public-xxxx"
atlas_private_key = "private-xxxx"

org_id                = "<org_id>"
project_owner_id      = "<owner_user_id>"
federation_settings_id = "<federation_id>"

environment = "dev"
aws_region  = "us-east-1"
azure_region = "eastus"

instance_size          = "M10"
max_instance_size      = "M30"
node_count             = 3
mongo_db_major_version = "7.0"

aws_interface_endpoint_ids = [
  "vpce-0123456789abcdef0"
]

azure_private_endpoint_resource_id = "/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/rg/providers/Microsoft.Network/privateEndpoints/pe-atlas"
azure_private_endpoint_ip          = "10.10.10.10"
azure_connection_names             = ["datahub-atlas"]

project_teams = {
  sre = {
    team_id = "<team_id>"
    roles   = ["GROUP_DATA_ACCESS_ADMIN"]
  }
}

api_access_list = {
  corp_cidr = {
    cidr_block = "10.0.0.0/16"
  }
}
